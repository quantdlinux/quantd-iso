#!/bin/sh
set -e

CMDLINE="$(cat /proc/cmdline)"
LIVEUSER="user"   # change to your live username if different

if echo "$CMDLINE" | grep -qw "autostart-calamares"; then
    echo "[live-config] Autostarting Calamares installer..."
    # Use Debianâ€™s Calamares .desktop entry so branding + configs are applied
    sudo -u $LIVEUSER gtk-launch calamares-install-debian.desktop &
fi
